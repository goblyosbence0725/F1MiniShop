<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="14dp"
    android:background="@android:color/white"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/ivCartImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_product_cap"
        android:scaleType="centerInside"
        android:layout_marginRight="14dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCartProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Termék neve"
            android:textStyle="bold"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvCartProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 990 Ft"
            android:textSize="16sp"
            android:textColor="@color/gray_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnMinus"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="-"
                style="@style/Widget.MaterialComponents.Button"
                app:backgroundTint="@color/red_button"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="56dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPlus"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:text="+"
                style="@style/Widget.MaterialComponents.Button"
                app:backgroundTint="@color/red_button"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemove"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:text="Törlés"
                style="@style/Widget.MaterialComponents.Button"
                app:backgroundTint="@color/red_button"
                android:textColor="@color/white"
                android:layout_marginLeft="12dp"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
